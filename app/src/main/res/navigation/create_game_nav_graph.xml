<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_game_nav_graph.xml"
    app:startDestination="@id/createGameFragment">

    <fragment
        android:id="@+id/createGameFragment"
        android:name="com.example.benefit.ui.gap.create_game.CreateGameFragment"
        tools:layout="@layout/fragment_create_game">

        <argument
            android:name="selectedFriends"
            android:defaultValue="@null"
            app:argType="com.example.benefit.remote.models.BenefitFriends"
            app:nullable="true" />
        <action
            android:id="@+id/action_createGameFragment_to_findFriendsFragment"
            app:destination="@id/findFriendsFragment" />

    </fragment>


    <fragment
        android:id="@+id/findFriendsFragment"
        android:name="com.example.benefit.ui.gap.create_game.FindFriendsFragment"
        tools:layout="@layout/fragment_find_friends">

        <argument
            android:name="selectedFriends"
            app:argType="com.example.benefit.remote.models.BenefitFriends"
            app:nullable="true" />

        <action
            android:id="@+id/action_findFriendsFragment_to_createGameFragment"
            app:destination="@id/createGameFragment" />

    </fragment>

