<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/llCalculator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMinAmount">

        <TextView
            android:id="@+id/tvPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d1d2d8"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:text="+"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d1d2d8"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:text="−"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d1d2d8"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:text="×"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d1d2d8"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:text="÷"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d1d2d8"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:text="="
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d1d2d8"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="4"
            android:useDefaultMargins="true">

            <TextView
                android:id="@+id/tvOne"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvTwo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="2"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvThree"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="3"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvFour"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="4"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvFive"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="5"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvSix"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="6"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvSeven"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="7"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvEight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="8"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvNine"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="9"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <TextView
                android:id="@+id/tvZero"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_white_rounded_calculator_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="0"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


            <ImageView
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_backspace"
                android:textSize="25dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content" />


        </GridLayout>

    </LinearLayout>
</LinearLayout>
